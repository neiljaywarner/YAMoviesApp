<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neiljaywarner.yamoviesapp.MovieDetailActivityFragment">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Chappie" />

    <ImageView
        android:id="@+id/imageViewPoster"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/textViewTitle"
        android:src="@android:drawable/ic_lock_lock" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/imageViewPoster"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120min"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textViewReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8.1/10" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPoster"
        android:text="Plot Synopsis" />

</RelativeLayout>
